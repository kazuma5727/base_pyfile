<ImageWidget>:

# python -m kivy.tools.kviewer

# BoxLayout:
#     size_hint: (None,None)
#     width: 968  
#     height: 414
    canvas.before:
        Color:
            rgba: 240/255,240/255,240/255,1
            # rgba:1,1,1,1
        Rectangle:
            pos: self.pos
            size:self.size

    BoxLayout:
        size:root.size
        BoxLayout:
            BoxLayout:
                orientation:"vertical"
                size_hint_x: 0.7
                Label:
                    id:camera
                    size_hint_y: 0.8

                BoxLayout:
                    padding: 10
                    spacing: 10
                    size_hint_y: 0.2
                    Button:
                        id: back_image
                        text: "start" 
                        font_size: 30
                        color: 0,0,0,1
                        background_normal : ""
                        background_color: (225/255,225/255,225/255,1.0)

                        on_press:root.start()
                    Button:
                        id: next_image
                        text: "end" 
                        font_size: 30
                        color: 0,0,0,1
                        background_normal : ""
                        background_color: (225/255,225/255,225/255,1.0)
                        on_press:root.delete()
                    BoxLayout:
                        size_hint_x: 0.5
                        orientation:"vertical"
                        Label:
                            id: Auto_start
                            text: "Auto_movie" 
                            font_size: 20
                            color: 0,0,0,1
                            background_normal : ""
                            background_color: (225/255,225/255,225/255,1.0)
                        CheckBox:
                            id: Auto_mode_check
                            color: 0,0,0,1
                            active: root.on_off

            ProgressBar:
                size_hint_y: 0.1
                font_size: 50
                value: 100
                max: 100

        #             Switch:
        #                 id: Auto_swich

